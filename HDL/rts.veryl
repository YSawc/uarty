pub module Rts (
    i_clk   : input  logic,
    i_rst   : input  logic,
    i_en    : input  logic,
    o_data  : output logic,
    o_busy  : output logic,
    o_finish: output logic,
) {
    enum Status: logic {
        disable,
        enable,
    }
    var status       : Status;
    var status_next  : Status;
    var busy_next    : logic ;
    var o_finish_next: logic ;
    var o_data_next  : logic ;

    always_comb {
        status_next   = status;
        o_finish_next = o_finish;
        o_data_next   = o_data;
        case status {
            Status::disable: {
                if i_en {
                    status_next = Status::enable;
                    busy_next   = 1;
                    o_data_next = 0;
                }
            }
            Status::enable: {
                if !i_en {
                    status_next   = Status::disable;
                    o_data_next   = 1;
                    busy_next     = 0;
                    o_finish_next = 1;
                }
            }
        }
    }

    always_ff (posedge i_clk, async_high i_rst) {
        if_reset {
            status   = Status::disable;
            o_data   = 1;
            o_finish = 0;
        } else {
            status   = status_next;
            o_data   = o_data_next;
            o_finish = o_finish_next;
        }
    }
}
